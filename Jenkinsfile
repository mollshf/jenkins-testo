pipeline {
    agent any
    stages {
        stage('Build') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
            }
            steps {
                echo "Hello, sugoii!!, nice to meet you."
            }
        }
        stage('Test') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
            }
            steps {
                echo "Hello, sugoii!!, nice to meet you."
            }
        }
        stage('Manual Approval') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
            }
            steps {
                echo "Hello, sugoii!!, nice to meet you."
            }
        }
        stage('Deploy') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
            }
            steps {
                echo "Hello, sugoii!!, nice to meet you."
            }
        }
    }
}